<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :published_on %><br>
    <%= f.date_field :published_on %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>